@model List<BlogViewModel>
@{
    var isShowMessage = TempData["IsSuccess"] != null;
    var isSuccess = false;
    var message = "";

    if(isShowMessage)
    {
        isSuccess   = Convert.ToBoolean(TempData["IsSuccess"]);
        message     = Convert.ToString(TempData["Message"]);
    }

}

<a class="btn btn-primary my-3" href="/Blogs/Create">Create New Blog</a>

@if(isShowMessage)
{
    if (isSuccess)
    {
        <div class="alert alert-success my-3" role="alert">
            @message
        </div>
    }
    else
    {
        <div class="alert alert-danger my-3" role="alert">
            @message
        </div>
    }
}

<table class="table table-responsive">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Count; i++)
        {
            var blog = Model[i];
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@(blog.BlogTitle)</td>
                <td>@(blog.BlogAuthor)</td>
                <td>@(blog.BlogContent)</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Blogs/Edit/@(blog.BlogId)">Edit</a> |
                    <a class="btn btn-sm btn-danger" href="/Blogs/Delete/@(blog.BlogId)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>