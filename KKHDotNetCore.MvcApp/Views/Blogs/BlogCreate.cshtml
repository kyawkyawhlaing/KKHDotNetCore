@model BlogRequestModel

<form method="post" action="/Blogs/Create">
    <div class="mb-3">
        <label for="title" class="form-label">Blog Title</label>
        <input type="text" class="form-control form-control-sm" id="title" name="BlogTitle">
    </div>
    <div class="mb-3">
        <label for="author" class="form-label">Blog Author</label>
        <input type="text" class="form-control form-control-sm" id="author" name="BlogAuthor">
    </div>
    <div class="mb-3">
        <label for="content" class="form-label">Blog Content</label>
        <textarea class="form-control form-control-sm" id="content" rows="3" name="BlogContent"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
